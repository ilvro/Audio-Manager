<Page x:Class="Audio_Controller.pages.tracks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Audio_Controller.pages"
      mc:Ignorable="d" 
      Height="550.878" Width="548.781"
      Title="tracks">

    <Grid Name="mainGrid">
        <TextBlock HorizontalAlignment="Left" Margin="25,204,0,0" TextWrapping="Wrap" Text="Search for:" VerticalAlignment="Top" FontSize="24"/>
        <TextBox x:Name="searchBar" HorizontalAlignment="Left" Height="36" Margin="25,250,0,0" Text=" Begin by typing to choose tracks by title..." VerticalAlignment="Top" Width="498" VerticalContentAlignment="Center" Panel.ZIndex="1" Foreground="DarkGray" FontSize="16" PreviewMouseLeftButtonDown="searchBar_PreviewMouseLeftButtonDown" LostFocus="searchBar_LostFocus">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="2"/>

                </Style>
            </TextBox.Resources>
        </TextBox>
        <Button Content="Choose a file or drag it here." HorizontalAlignment="Center"  VerticalAlignment="Top" Width="465" Height="77" Margin="37,111,47,0" Opacity="0.5" Background="#d7f4f4" FontSize="16" AllowDrop="True"/>


    </Grid>
</Page>
